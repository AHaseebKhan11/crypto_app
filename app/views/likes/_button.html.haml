- if current_user.like?(post)
  -# = button_to "Unlike", unlike_path(post_id: post.id), remote: true, method: :delete
  = link_to(unlike_path(post_id: post.id), remote: true, method: :delete, style: "text-decoration: none;") do
    %i.fa.fa-thumbs-up
    = post.likes.count
- else
  -# = button_to "like", like_path(post_id: post.id), remote: true
  = link_to(like_path(post_id: post.id),  remote: true, method: :post, style: "text-decoration: none;") do
    %i.fa.fa-thumbs-up{style: "color: grey"}
  - if post.likes.count > 0
    = post.likes.count
