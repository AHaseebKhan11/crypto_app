- if current_user
  %p.post-links
    %span.glyphicon.glyphicon-comment.g-links{"aria-hidden" => "true"}
    = div_for post do
      = render partial: 'likes/button', locals: { post: post }
    = render partial: 'retweet/retweet_button', locals: { post: post }
    %span.glyphicon.glyphicon-option-horizontal.g-links{"aria-hidden" => "true"}
- else
  %p.post-links
    %span.glyphicon.glyphicon-comment.g-links{"aria-hidden" => "true"}
    %span.glyphicon.glyphicon-option-horizontal.g-links{"aria-hidden" => "true"}
    %i.fa.fa-thumbs-up{style: "color: grey"}
    - if post.likes.count > 0
      = post.likes.count
    %span.glyphicon.glyphicon-retweet.g-links{"aria-hidden" => "true"}
