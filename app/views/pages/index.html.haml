.panel-body
  .col-sm-12
    .col-sm-2
    .col-sm-6
      %br/
      = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
        = devise_error_messages!
        .form-group.row.col-sm-12

          = f.text_field :username, placeholder: 'Username', autofocus:true, required: true, class: "form-control"
        .form-group.row.col-sm-12

          = f.email_field :email, placeholder: 'Email', required: true, class: "form-control"
        .form-group.row.col-sm-12

          = f.password_field :password, placeholder: 'Password', required: true, autocomplete: "off", class: "form-control"
        .form-group.row.col-sm-12

          = f.password_field :password_confirmation, placeholder: 'Password Confirmation', required: true, autocomplete: "off", class: "form-control"
        .form-group.row
          .col-sm-6
            = f.label 'Phone Number'
            = f.text_field :phone_number, placeholder: '+1XXXXXXXXXX', autocomplete: "off", class: "form-control"
          .col-sm-5
            = f.label 'Country'
            = select_tag :country, options_for_select(ISO3166::Country.countries.sort_by(&:name)), class: 'form-control'


        .form-group.row
          .col-sm-4.form-group
            = text_field_tag 'user[info][address][city]', '', placeholder: 'City', class: 'form-control'
          .col-sm-4.form-group
            = text_field_tag 'user[info][address][state]', '', placeholder: 'State', class: 'form-control'
          .col-sm-3.form-group
            = text_field_tag 'user[info][address][zip_code]', '', placeholder: 'Zip Code', class: 'form-control'

        .form-group.row
          .col-sm-7.text-align-left-fs
            %h5 Want to be a moderator?
          .col-sm-4.mod-check
            = f.check_box :role, {checked: false}, "user", "moderator"
          .col-sm-1
        .form-group.row.moderator_fields.hide
          .col-sm-5.text-align-left-fs
            %h5 Why do you want to be a Moderator?
          .col-sm-7
            = text_area_tag 'user[info][why_moderator]', '', class: 'form-control'
          .padding-top-80
            .col-sm-5.text-align-left-fs
              %h5 Upload your resume:
            .col-sm-7.resume_uploader
              = f.file_field :resume

        .actions
          %center
            = f.submit "Sign up", class: "btn btn-primary"
        %br/
        %br/
        %br/

    %center.col-sm-3.signup-links
      %a Create Watch List
      %br/
      %a Post Ideas
      %br/
      %a Get Answers
      %br/
      %a Build Communities
    .col-sm-2
%br/
%br/
- Post.all.map do |post|
  = render partial: '/pages/post', locals: { post: post }
